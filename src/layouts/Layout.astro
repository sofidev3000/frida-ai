---
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Header from "../components/organisms/Header.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <div class="backgroud">
      <Header />
      <main>
        <slot />
      </main>
    </div>
    <!-- <Footer /> -->
    <style>
      .background {
        background-color: #06080c;
        position: relative;
        z-index: 1;
        overflow-x: hidden;
        width: 100%;
      }

      .backgroud:after,
      .backgroud:before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        height: 100%;
        width: 100%;
        overflow-x: hidden;
        z-index: -10;

      }

      .backgroud:before {
        content: "";
        position: absolute;
        background-color: #090c12;
        background-image: radial-gradient(
            37.88% 68.62% at 50% 0,
            rgba(26, 244, 208, 0.3) 0%,
            rgba(0, 124, 120, 0) 80%
          ),
          radial-gradient(
            10% 10% at 50% 10%,
            rgba(26, 237, 244, 0.5) 0%,
            rgba(0, 124, 120, 0.4) 90%,
            rgba(0, 124, 116, 0) 100%
          ),
          radial-gradient(
            100% 28.09% at 100% 10%,
            rgba(26, 244, 230, 0.2) 0%,
            rgba(0, 97, 124, 0.1) 80%,
            rgba(0, 124, 112, 0) 100%
          ),
          linear-gradient(
            180deg,
            rgba(0, 105, 124, 0.075) 35.79%,
            rgba(0, 124, 71, 0.05) 80%,
            #0d1017
          ),
          radial-gradient(
            74.84% 135.56% at 100% 10%,
            rgba(40, 197, 218, 0.5) 0%,
            #0d1017 80%
          );
        background-repeat: no-repeat;
        background-size: cover;
        height: 100svh;
        z-index: -2;
        filter: blur(50px);
        top: -50px;
        left: -50px;
        right: -50px;
        width:100%;
      }

      /* @media (max-width: 768px) {
    .background:before {
        background-size: 100%;
        width: 85%;
    }
}*/

      .background:after {
        content: "";
        background-color: #13161c;
        z-index: -3;
      }
    </style>
  </body>
</html>
